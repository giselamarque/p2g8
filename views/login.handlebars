<!--login html-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookworm [vm part for login/signup]</title>
    <link rel="stylesheet"link href="./login-assets/style.css">
</head>
<body>
<section class="container-forms">
            <div class="form-login">
                <div class="form-content">
                    <!--header-->
                    <header>login</header>
                    <!--login inputs-->
                    <form action="#">
                        <div class="field input">
                            <input type="email" placeholder="username or email" class="email-input">
                        </div>

                        <div class="field input">
                            <input type="password" placeholder="password" class="pw-input">
                            <!--good idea to have 'hide pw icon'-->
                        </div>

                        <div class="form-link">
                            <a href="#" class="forgot-pw">Forgot Password?</a>
                        </div>

                        <div class="login-btn">
                            <button>Log in</button>
                        </div>
                    
                        <div class="form-link">
                            <span>Don't Have an Account? <a href="#" class="sign-up">sign up!</a></span>
                        </div>
                    </form>
                    <!--create account/sign-up-->
                    <form class="form-hidden" id="sign-up">
                        <header>Sign up</header>
                        <div class="field input">
                            <input type="text" placeholder="username" class="input" id="username-signup">
                        </div>
                        <div class="field input">
                            <input type="text" placeholder="email" class="input" id="email-signup">
                        </div>
                        <div class="field input">
                            <input type="text" placeholder="create a password" class="input" id="password-signup">
                        </div>

                        <div class="signup-btn">
                            <button>Create Account</button>
                        </div>


                    </form>
                </div>
            </div>
        </section>
<script src="../public/javascript/login.js"></script>
</body>
</html>